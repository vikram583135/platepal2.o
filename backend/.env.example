# Django Settings
SECRET_KEY=your-super-secret-key-change-in-production
DEBUG=False
ALLOWED_HOSTS=api.platepal.com,localhost,127.0.0.1

# Database (Neon PostgreSQL)
DB_NAME=platepal
DB_USER=your-db-user
DB_PASSWORD=your-db-password
DB_HOST=ep-xxx-xxx-xxx.region.aws.neon.tech
DB_PORT=5432
# Alternative: Use DATABASE_URL for Neon/Supabase
# DATABASE_URL=postgresql://user:password@ep-xxx.region.aws.neon.tech/platepal?sslmode=require

# Redis (Upstash)
REDIS_HOST=xxx.upstash.io
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
# Alternative: Use REDIS_URL
# REDIS_URL=rediss://default:xxx@xxx.upstash.io:6379

# Use Redis in development (set to 1 to enable)
USE_REDIS=0

# CORS Settings (comma-separated origins)
CORS_ALLOWED_ORIGINS=https://app.platepal.com,https://biz.platepal.com,https://admin.platepal.com,https://rider.platepal.com

# Cloudinary (Media Storage)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@platepal.com

# Sentry (Error Tracking)
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# Rate Limiting
RATELIMIT_ENABLE=True
