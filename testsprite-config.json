      "detail": "GET /api/restaurants/restaurants/{id}/",
      "menu": "GET /api/restaurants/items/?restaurant_id={id}"
    },
    "orders": {
      "create": "POST /api/orders/orders/",
      "list": "GET /api/orders/orders/",
      "detail": "GET /api/orders/orders/{id}/",
      "track": "GET /api/orders/orders/{id}/" 
