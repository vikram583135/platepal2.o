          "/api/restaurants/restaurants/": {
            "get": {
              "summary": "List all restaurants with filters",
              "parameters": [
                {"name": "search", "in": "query", "schema": {"type": "string"}},
                {"name": "cuisine", "in": "query", "schema": {"type": "string"}},
                {"name": "rating", "in": "query", "schema": {"type": "number"}}
              ]
