  "features": [
    {
      "name": "User Authentication",
      "description": "JWT-based authentication with email/password, biometric auth, 2FA, OAuth (Google, Apple, Facebook), and session management",
      "files": [
        "backend/apps/accounts/views.py",
        "backend/apps/accounts/serializers.py",
        "backend/apps/accounts/models.py",
        "backend/apps/accounts/urls.py"
      ],
      "api_doc": {
        "openapi": "3.0.0",
        "info": {
          "title": "Authentication API",
          "version": "1.0.0"
        },
        "paths": {
          "/api/auth/token/": {
            "post": {
              "summary": "Login with email and password",
              "requestBody": {
                "required": true,
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "email": {"type": "string"},
                        "password": {"type": "string"}
                      }
                    }
                  }
                }
              },
              "responses": {
                "200": {
                  "description": "Returns access and refresh tokens"
                }
              }
            }
          },
          "/api/auth/token/refresh/": {
            "post": {
              "summary": "Refresh access token"
            }
          },
          "/api/auth/biometric-auth/login/": {
            "post": {
              "summary": "Login with biometric authentication"
            }
          },
          "/api/auth/otp/send/": {
            "post": {
              "summary": "Send OTP for 2FA"
            }
          },
          "/api/auth/otp/verify/": {
            "post": {
              "summary": "Verify OTP"
            }
          }
        }
      }
    },
    {
